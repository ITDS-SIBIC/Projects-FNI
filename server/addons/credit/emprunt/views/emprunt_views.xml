<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form view for emprunt -->
        <record id="view_emprunt_form" model="ir.ui.view">
            <field name="name">emprunt.form</field>
            <field name="model">emprunt</field>
            <field name="arch" type="xml">
                <form string="Emprunt">
                    <header>
                        <button name="action_mark_as_closed"
                                string="Mark as Closed"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <!-- Example button with conditional visibility based on state -->
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="loan_type"/>
                            <field name="state"/>
                            <field name="date_signature"/>
                            <!-- Add other fields as needed -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
