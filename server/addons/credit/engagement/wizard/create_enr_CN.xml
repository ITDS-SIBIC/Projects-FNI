<odoo>
    <data>
        <!-- View for the create.avenantc2.wizard -->
        <record id="create_enr_form" model="ir.ui.view">
            <field name="name">create.avenantc2.wizard.form</field>
            <field name="model">create.avenantc2.wizard</field>
            <field name="arch" type="xml">
                <form string="Enregistrement">
                    <group>
                        <field name="date_enregistrement"/>
                        <field name="num_enregistrement"/>
                    </group>
                    <footer>
                        <button name="action_appliquer" string="Appliquer" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>